@model BookCatalog.Web.Models.BookFormViewModel

<h1 class="text-primary">Create Book</h1>

<h4 class="text-secondary">Enter the details of the new book</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Year" class="form-label fw-bold"></label>
                        <input asp-for="Year" class="form-control" placeholder="Enter publication year" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Rating" class="form-label fw-bold"></label>
                        <input asp-for="Rating" class="form-control" placeholder="Enter book rating" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <label asp-for="@Model.GenreId" class="form-label-add-edit">Select Genre</label>
                        <select asp-for="@Model.GenreId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                            <option value="">Select Genre...</option>
                        </select>
                        <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

