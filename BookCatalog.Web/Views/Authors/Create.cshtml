@model BookCatalog.Data.Models.Author

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Create Author</h1>

<h4 class="text-secondary">Enter the details of the new author</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter author's name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                     <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                        <input asp-for="DateOfBirth" class="form-control" placeholder="Enter date of birth" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                   
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
